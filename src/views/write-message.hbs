
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Escribe un mensaje</h3>
        </div>
        <div class="card-body">
          <form method="POST" action="/write-message">
            <div class="form-group">
              <input type="text" name="touser" class="form-control" placeholder="mensaje para">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="tomessage" rows="10" cols="38" placeholder="Escribel el mensaje"></textarea>
            </div>
            <div class="form-group text-center">
              <input type="submit" class="btn btn-success form-control">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>